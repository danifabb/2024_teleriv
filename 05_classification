library(terra)
library(imageRy)
library(ggplot2)
library(patchwork)

# quantifying land cover variability
im.list()
#importing data
sun <- im.import("Solar_Orbiter_s_first_views_of_the_Sun_pillars.jpg")
# possiamo fare una classificazione in base ai livelli energetici (giallo, marrone, nero)
sunc <- im.classify(sun, num_clusters=3) # plot creato in automatico, algoritmo ha selezionato colori a caso per i tre cluster 8noi possiamo avere classi invertite rispetto a lui)

# Mato Grosso images
m1992 <- im.import("matogrosso_l5_1992219_lrg.jpg")
m2006 <- im.import("matogrosso_ast_2006209_lrg.jpg")
# classification of these images
m1992c <- im.classify(m1992, num_clusters=2)
# class 1 = forest
# class 2 = human
m2006c <- im.classify(m2006, num_clusters=2)
# classe 1 = human
# classe 2 = forest

